@model SHOESTKC.CSDL.DanhMuc

@{
    ViewData["Title"] = "Chi tiết danh mục";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-list"></i> Chi tiết danh mục</h2>
        <a asp-action="Index" asp-controller="Category" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="fas fa-info-circle"></i> Thông tin danh mục</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <th width="150">Tên danh mục:</th>
                            <td><strong>@Model.TenDanhMuc</strong></td>
                        </tr>
                        <tr>
                            <th>Slug:</th>
                            <td><code>@Model.Slug</code></td>
                        </tr>
                        <tr>
                            <th>Mô tả:</th>
                            <td>@(Model.MoTa ?? "Chưa có mô tả")</td>
                        </tr>
                        <tr>
                            <th>Ngày tạo:</th>
                            <td>@(Model.NgayTao?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</td>
                        </tr>
                        <tr>
                            <th>Số sản phẩm:</th>
                            <td>
                                <span class="badge bg-primary">
                                    @(Model.SanPham?.Count ?? 0) sản phẩm
                                </span>
                            </td>
                        </tr>
                    </table>

                    <div class="mt-3">
                        <a asp-action="Edit" asp-controller="Category" asp-route-id="@Model.Id" 
                           class="btn btn-warning">
                            <i class="fas fa-edit"></i> Sửa danh mục
                        </a>
                        <button onclick="deleteCategory(@Model.Id)" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Xóa danh mục
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-box"></i> Sản phẩm trong danh mục</h5>
                </div>
                <div class="card-body">
                    @if (Model.SanPham != null && Model.SanPham.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Ảnh</th>
                                        <th>Tên sản phẩm</th>
                                        <th>Giá</th>
                                        <th>Biến thể</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var sp in Model.SanPham.Take(10))
                                    {
                                        <tr>
                                            <td>
                                                <img src="@(sp.AnhChinh ?? "/images/no-image.jpg")" 
                                                     alt="@sp.TenSanPham"
                                                     style="width:40px;height:40px;object-fit:cover;border-radius:5px;" />
                                            </td>
                                            <td>
                                                <a href="/Admin/ChiTietSanPham/@sp.Id">
                                                    @sp.TenSanPham
                                                </a>
                                            </td>
                                            <td>@sp.GiaGoc.ToString("N0") đ</td>
                                            <td>
                                                <span class="badge bg-info">
                                                    @(sp.BienThe?.Count ?? 0)
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        @if (Model.SanPham.Count > 10)
                        {
                            <p class="text-muted text-center">
                                <small>Hiển thị 10/@Model.SanPham.Count sản phẩm</small>
                            </p>
                        }
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-inbox fa-3x mb-2"></i>
                            <p>Chưa có sản phẩm nào trong danh mục này</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteCategory(id) {
            if (confirm('Bạn có chắc chắn muốn xóa danh mục này?')) {
                fetch('/Category/Delete?id=' + id, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        window.location.href = '/Category/Index';
                    } else {
                        alert(data.message);
                    }
                })
                .catch(error => {
                    alert('Có lỗi xảy ra: ' + error);
                });
            }
        }
    </script>
}
