@model SHOESTKC.CSDL.DonHang

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-file-invoice"></i> Chi tiết đơn hàng: @Model.MaDonHang</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>

    <div class="row">
        <!-- Thông tin đơn hàng -->
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="fas fa-shopping-cart"></i> Sản phẩm trong đơn hàng</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>Size</th>
                                    <th>Màu</th>
                                    <th>Đơn giá</th>
                                    <th>SL</th>
                                    <th>Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ChiTietDonHang)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(item.BienThe?.SanPham?.AnhChinh))
                                                {
                                                    <img src="@item.BienThe.SanPham.AnhChinh"
                                                         style="width:50px;height:50px;object-fit:cover;border-radius:5px"
                                                         class="me-2" />
                                                }
                                                <div>
                                                    <strong>@item.BienThe?.SanPham?.TenSanPham</strong><br />
                                                    <small class="text-muted">SKU: @item.BienThe?.MaSku</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@item.BienThe?.Size</td>
                                        <td>@item.BienThe?.MauSac</td>
                                        <td>@item.DonGia.ToString("N0") đ</td>
                                        <td>@item.SoLuong</td>
                                        <td><strong>@item.ThanhTien.ToString("N0") đ</strong></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Tổng tiền -->
                    <div class="border-top pt-3">
                        <div class="row">
                            <div class="col-md-6 offset-md-6">
                                <table class="table table-borderless">
                                    <tr>
                                        <td>Tạm tính:</td>
                                        <td class="text-end"><strong>@Model.TamTinh.ToString("N0") đ</strong></td>
                                    </tr>
                                    <tr>
                                        <td>Giảm giá:</td>
                                        <td class="text-end text-danger">
                                            <strong>-@((Model.TienGiam ?? 0).ToString("N0")) đ</strong>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Phí vận chuyển:</td>
                                        <td class="text-end">
                                            <strong>@((Model.PhiVanChuyen ?? 0).ToString("N0")) đ</strong>
                                        </td>
                                    </tr>
                                    <tr class="border-top">
                                        <td><strong>Tổng cộng:</strong></td>
                                        <td class="text-end">
                                            <h5 class="text-primary mb-0">@Model.TongTien.ToString("N0") đ</h5>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Thông tin khách hàng -->
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="fas fa-user"></i> Thông tin khách hàng</h5>
                </div>
                <div class="card-body">
                    <p><strong>Họ tên:</strong><br />@Model.NguoiDung?.HoTen</p>
                    <p><strong>Email:</strong><br />@Model.NguoiDung?.Email</p>
                    <p><strong>SĐT:</strong><br />@Model.SoDienThoai</p>
                    <p><strong>Địa chỉ giao:</strong><br />@Model.DiaChiGiao</p>
                </div>
            </div>

            <!-- Trạng thái -->
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-sync"></i> Cập nhật trạng thái</h5>
                </div>
                <div class="card-body">
                    <form method="post" action="/Admin/UpdateOrderStatus">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <select name="status" class="form-select mb-3">
                            <option value="Chờ xác nhận" selected="@(Model.TrangThaiDonHang == "Chờ xác nhận")">Chờ xác nhận</option>
                            <option value="Đã xác nhận" selected="@(Model.TrangThaiDonHang == "Đã xác nhận")">Đã xác nhận</option>
                            <option value="Đang giao" selected="@(Model.TrangThaiDonHang == "Đang giao")">Đang giao</option>
                            <option value="Đã giao" selected="@(Model.TrangThaiDonHang == "Đã giao")">Đã giao</option>
                            <option value="Đã hủy" selected="@(Model.TrangThaiDonHang == "Đã hủy")">Đã hủy</option>
                        </select>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-save"></i> Cập nhật trạng thái
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
