@model IEnumerable<SHOESTKC.CSDL.DonHang>

@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int stt = (ViewBag.PageStartIndex ?? 0) + 1;
    string status = ViewBag.Status as string;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-shopping-cart"></i> Quản lý đơn hàng</h2>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-3">
        <div class="card-body">
            <form asp-action="DatHang" asp-controller="Admin" method="get" class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Tìm kiếm</label>
                    <input type="text" name="search" class="form-control"
                           placeholder="Mã đơn hàng hoặc tên khách hàng..."
                           value="@ViewBag.Search" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Trạng thái</label>
                    <select name="status" class="form-select">
                        <option value="" selected="@(string.IsNullOrEmpty(status))">-- Tất cả --</option>
                        <option value="cho_xac_nhan" selected="@(status == "cho_xac_nhan")">Chờ xác nhận</option>
                        <option value="da_xac_nhan" selected="@(status == "da_xac_nhan")">Đã xác nhận</option>
                        <option value="dang_giao" selected="@(status == "dang_giao")">Đang giao</option>
                        <option value="da_giao" selected="@(status == "da_giao")">Đã giao</option>
                        <option value="da_huy" selected="@(status == "da_huy")">Đã hủy</option>
                    </select>
                </div>

                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search"></i> Lọc
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Thông báo kết quả tìm kiếm -->
    @if (!string.IsNullOrEmpty(ViewBag.Search) || !string.IsNullOrEmpty(ViewBag.Status))
    {
        <div class="alert alert-info border-0 shadow-sm mb-3">
            <div class="d-flex align-items-center">
                <i class="fas fa-info-circle me-2"></i>
                <div>
                    <strong>Kết quả tìm kiếm: @(ViewBag.TotalItems ?? 0) đơn hàng</strong>
                    <div class="mt-1">
                        @if (!string.IsNullOrEmpty(ViewBag.Search))
                        {
                            <span class="badge bg-primary me-1">
                                <i class="fas fa-search"></i> "@ViewBag.Search"
                            </span>
                        }
                        @if (!string.IsNullOrEmpty(ViewBag.Status))
                        {
                            string statusText = ViewBag.Status switch
                            {
                                "cho_xac_nhan" => "Chờ xác nhận",
                                "da_xac_nhan" => "Đã xác nhận",
                                "dang_giao" => "Đang giao",
                                "da_giao" => "Đã giao",
                                "da_huy" => "Đã hủy",
                                _ => ViewBag.Status
                            };
                            <span class="badge bg-warning me-1">
                                <i class="fas fa-filter"></i> @statusText
                            </span>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Mã đơn</th>
                            <th>Khách hàng</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái đơn</th>
                            <th>Thanh toán</th>
                            <th>Ngày tạo</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var order in Model)
                            {
                                <tr>
                                    <td><strong>@stt</strong></td>
                                    <td class="text-primary fw-bold">@order.MaDonHang</td>
                                    <td>
                                        <strong>@order.NguoiDung?.HoTen</strong><br />
                                        <small class="text-muted">@order.NguoiDung?.Email</small>
                                    </td>
                                    <td class="text-danger fw-bold">@order.TongTien.ToString("N0") đ</td>
                                    <td>
                                        @if (string.IsNullOrEmpty(order.TrangThaiDonHang))
                                        {
                                            <span class="badge bg-secondary">Chưa xác định</span>
                                        }
                                        else
                                        {
                                            switch (order.TrangThaiDonHang)
                                            {
                                                case "Chờ xác nhận":
                                                    <span class="badge bg-warning">Chờ xác nhận</span>
                                                    break;
                                                case "Đã xác nhận":
                                                    <span class="badge bg-info">Đã xác nhận</span>
                                                    break;
                                                case "Đang giao":
                                                    <span class="badge bg-primary">Đang giao</span>
                                                    break;
                                                case "Đã giao":
                                                    <span class="badge bg-success">Đã giao</span>
                                                    break;
                                                case "Đã hủy":
                                                    <span class="badge bg-danger">Đã hủy</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary" title="@order.TrangThaiDonHang">@order.TrangThaiDonHang</span>
                                                    break;
                                            }
                                        }
                                    </td>
                                    <td>
                                        @if (order.TrangThaiThanhToan == "Đã thanh toán")
                                        {
                                            <span class="badge bg-success">Đã thanh toán</span>
                                        }
                                        else if (order.TrangThaiThanhToan == "Thất bại")
                                        {
                                            <span class="badge bg-danger">Thất bại</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Chưa thanh toán</span>
                                        }
                                    </td>
                                    <td>@order.NgayTao?.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        <a asp-action="ChiTietHoaDon" asp-controller="Admin" asp-route-id="@order.Id"
                                           class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                                stt++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted">
                                    Chưa có đơn hàng nào
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Phân trang -->
            @if (ViewBag.TotalPages > 1)
            {
                <nav class="mt-3">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link"
                               href="?page=@(ViewBag.CurrentPage - 1)&search=@ViewBag.Search&status=@ViewBag.Status">
                                Trước
                            </a>
                        </li>

                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link"
                                   href="?page=@i&search=@ViewBag.Search&status=@ViewBag.Status">@i</a>
                            </li>
                        }

                        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                            <a class="page-link"
                               href="?page=@(ViewBag.CurrentPage + 1)&search=@ViewBag.Search&status=@ViewBag.Status">
                                Sau
                            </a>
                        </li>
                    </ul>

                    <p class="text-center text-muted small">
                        Hiển thị trang @ViewBag.CurrentPage / @ViewBag.TotalPages –
                        tổng @ViewBag.TotalItems đơn hàng
                    </p>
                </nav>
            }
        </div>
    </div>
</div>
