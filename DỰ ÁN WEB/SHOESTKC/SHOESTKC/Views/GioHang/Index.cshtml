@model IEnumerable<SHOESTKC.CSDL.GioHang>

@{
    ViewData["Title"] = "Giỏ hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <h2 class="mb-4"><i class="fas fa-shopping-cart"></i> Giỏ hàng của bạn</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (ViewBag.ShowLoginPrompt == true)
    {
        <div class="card text-center py-5">
            <div class="card-body">
                <i class="fas fa-shopping-cart fa-5x text-muted mb-3"></i>
                <h4>Bạn chưa đăng nhập</h4>
                <p class="text-muted">Vui lòng đăng nhập để xem giỏ hàng của bạn</p>
                <div class="mt-3">
                    <a asp-action="Login" asp-controller="Auth" class="btn btn-primary">
                        <i class="fas fa-sign-in-alt"></i> Đăng nhập
                    </a>
                    <a asp-action="Register" asp-controller="Auth" class="btn btn-outline-primary">
                        <i class="fas fa-user-plus"></i> Đăng ký
                    </a>
                </div>
            </div>
        </div>
    }
    else if (Model == null || !Model.Any())
    {
        <div class="card text-center py-5">
            <div class="card-body">
                <i class="fas fa-shopping-cart fa-5x text-muted mb-3"></i>
                <h4>Giỏ hàng trống</h4>
                <p class="text-muted">Hãy thêm sản phẩm vào giỏ hàng để tiếp tục mua sắm</p>

                <a asp-action="Index" asp-controller="Home" class="btn btn-primary mt-3">
                    <i class="fas fa-shopping-bag"></i> Tiếp tục mua sắm
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Sản phẩm trong giỏ (@Model.Count())</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var item in Model)
                        {
                            var giaBan = item.BienThe.SanPham.GiaGoc + (item.BienThe.ChenhLechGia ?? 0m);
                            var thanhTien = giaBan * item.SoLuong;

                            <div class="row mb-3 pb-3 border-bottom" id="row-@item.Id">
                                <div class="col-md-2">
                                    <img src="@item.BienThe.SanPham.AnhChinh" alt="@item.BienThe.SanPham.TenSanPham"
                                         class="img-fluid rounded">
                                </div>
                                <div class="col-md-4">
                                    <h6>@item.BienThe.SanPham.TenSanPham</h6>
                                    <p class="text-muted mb-1">
                                        <small>Màu: @item.BienThe.MauSac | Size: @item.BienThe.Size</small>
                                    </p>
                                    <p class="text-muted mb-0">
                                        <small>SKU: @item.BienThe.MaSku</small>
                                    </p>
                                </div>
                                <div class="col-md-2">
                                    <strong class="text-danger" data-price="@giaBan">@giaBan.ToString("N0")đ</strong>
                                </div>
                                <div class="col-md-2">
                                    <div class="input-group input-group-sm">
                                        <button class="btn btn-outline-secondary" type="button"
                                                onclick="updateQuantity(@item.Id, @(item.SoLuong - 1))">
                                            <i class="fas fa-minus"></i>
                                        </button>

                                        <input type="number" class="form-control text-center"
                                               id="qty-@item.Id" value="@item.SoLuong"
                                               min="1" max="@item.BienThe.SoLuongTon" readonly>

                                        <button class="btn btn-outline-secondary" type="button"
                                                onclick="updateQuantity(@item.Id, @(item.SoLuong + 1))">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </div>
                                    <small class="text-muted">Còn: @item.BienThe.SoLuongTon</small>
                                </div>
                                <div class="col-md-1">
                                    <strong class="text-danger" id="total-item-@item.Id">@thanhTien.ToString("N0")đ</strong>
                                </div>
                                <div class="col-md-1 text-end">
                                    <button class="btn btn-sm btn-outline-danger" onclick="removeItem(@item.Id)">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        }

                        <div class="text-end mt-3">
                            <button class="btn btn-outline-danger" onclick="clearCart()">
                                <i class="fas fa-trash-alt"></i> Xóa toàn bộ giỏ hàng
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Tổng đơn hàng</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Tạm tính:</span>
                            <strong id="cart-subtotal">@ViewBag.TongTien.ToString("N0")đ</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Phí vận chuyển:</span>
                            <strong>@ViewBag.PhiVanChuyen.ToString("N0")đ</strong>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <strong>Tổng cộng:</strong>
                            <strong class="text-danger fs-5" id="cart-total">@ViewBag.TongThanhToan.ToString("N0")đ</strong>
                        </div>

                        <a asp-action="Checkout" asp-controller="Order" class="btn btn-success w-100 mb-2">
                            <i class="fas fa-check-circle"></i> Thanh toán
                        </a>

                        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary w-100">
                            <i class="fas fa-arrow-left"></i> Tiếp tục mua sắm
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        const formatter = new Intl.NumberFormat('vi-VN', {
            style: 'currency',
            currency: 'VND',
        });

        function updateQuantity(id, newQty) {
            if (newQty < 1) return;

            let formData = new FormData();
            formData.append('id', id);
            formData.append('SoLuong', newQty);

            fetch('/GioHang/UpdateQuantity', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    document.getElementById(`qty-${id}`).value = newQty;
                    document.getElementById('cart-subtotal').innerText = formatter.format(data.tongTien);
                    document.getElementById('cart-total').innerText = formatter.format(data.tongThanhToan);
                    location.reload();
                } else {
                    alert(data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Có lỗi xảy ra khi cập nhật giỏ hàng.');
            });
        }

        function removeItem(id) {
            if (!confirm('Bạn có chắc muốn xóa sản phẩm này?')) return;

            let formData = new FormData();
            formData.append('id', id);

            fetch('/GioHang/Remove', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
            });
        }

        function clearCart() {
            if (!confirm('Bạn có chắc muốn xóa toàn bộ giỏ hàng?')) return;

            fetch('/GioHang/Clear', {
                method: 'POST',
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
            });
        }
    </script>
}
