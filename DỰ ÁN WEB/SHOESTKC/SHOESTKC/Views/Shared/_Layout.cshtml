@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SHOESTKC</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/toast.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/price-validation.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-action="Index" asp-controller="Home">
                    <i class="fas fa-shoe-prints"></i> SHOESTKC
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Home">Trang chủ</a>
                        </li>


                        @if (Context.Session.GetString("UserRole") == "admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning" asp-action="Index" asp-controller="Admin">
                                    <i class="fas fa-cog"></i> Quản lý
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">

                        <li class="nav-item">
                            <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#searchModal">
                                <i class="fas fa-search"></i> Tìm kiếm
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link position-relative" asp-action="Index" asp-controller="GioHang">
                                <i class="fas fa-shopping-cart"></i> Giỏ hàng
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
                                      id="cartCount" style="display: none;">
                                    0
                                </span>
                            </a>
                        </li>

                        @if (Context.Session.GetInt32("UserId") != null)
                        {
                            var userName = Context.Session.GetString("UserName");
                            var userRole = Context.Session.GetString("UserRole");
                            var isAdmin = userRole == "admin";
                            
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button"
                                   data-bs-toggle="dropdown" data-bs-auto-close="true" aria-expanded="false">
                                    <div class="user-avatar-circle me-2">
                                        @if (isAdmin)
                                        {
                                            <i class="fas fa-user-shield"></i>
                                        }
                                        else
                                        {
                                            <span class="user-initial">@userName.Substring(0, 1).ToUpper()</span>
                                        }
                                    </div>
                                    <span class="d-none d-lg-inline">
                                        <span class="user-greeting">Xin chào,</span>
                                        <strong>@userName</strong>
                                    </span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0" aria-labelledby="userDropdown" style="min-width: 280px;">
                                    <li class="px-3 py-3 border-bottom">
                                        <div class="d-flex align-items-center">
                                            <div class="user-avatar-circle-large me-3">
                                                @if (isAdmin)
                                                {
                                                    <i class="fas fa-user-shield"></i>
                                                }
                                                else
                                                {
                                                    <span class="user-initial-large">@userName.Substring(0, 1).ToUpper()</span>
                                                }
                                            </div>
                                            <div>
                                                <div class="fw-bold text-dark">@userName</div>
                                                @if (isAdmin)
                                                {
                                                    <small class="text-warning">
                                                        <i class="fas fa-crown"></i> Quản trị viên
                                                    </small>
                                                }
                                                else
                                                {
                                                    <small class="text-muted">Thành viên</small>
                                                }
                                            </div>
                                        </div>
                                    </li>
                                    <li>
                                        <a class="dropdown-item py-2" asp-action="Profile" asp-controller="KhachHang">
                                            <i class="fas fa-user-circle text-primary" style="width: 20px;"></i> Tài khoản của tôi
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item py-2" asp-action="MyOrders" asp-controller="Order">
                                            <i class="fas fa-shopping-bag text-success" style="width: 20px;"></i> Đơn mua
                                        </a>
                                    </li>
                                    @if (isAdmin)
                                    {
                                        <li><hr class="dropdown-divider my-1"></li>
                                        <li>
                                            <a class="dropdown-item py-2" asp-action="Index" asp-controller="Admin">
                                                <i class="fas fa-cog text-warning" style="width: 20px;"></i> Quản lý hệ thống
                                            </a>
                                        </li>
                                    }
                                    <li><hr class="dropdown-divider my-1"></li>
                                    <li>
                                        <a class="dropdown-item py-2 text-danger" asp-action="Logout" asp-controller="Auth">
                                            <i class="fas fa-sign-out-alt" style="width: 20px;"></i> Đăng xuất
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Login" asp-controller="Auth">
                                    <i class="fas fa-sign-in-alt"></i> Đăng nhập
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Register" asp-controller="Auth">
                                    <i class="fas fa-user-plus"></i> Đăng ký
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container mt-4">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted bg-dark text-white mt-5">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-4">
                    <h5><i class="fas fa-shoe-prints"></i> SHOESTKC</h5>
                    <p>Chuyên cung cấp giày thể thao chính hãng, chất lượng cao với giá ưu đãi nhất.</p>
                </div>
                <div class="col-md-4">
                    <h5>Thông tin</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white-50">Về chúng tôi</a></li>
                        <li><a href="#" class="text-white-50">Chính sách</a></li>
                        <li><a href="#" class="text-white-50">Điều khoản</a></li>
                        <li><a href="#" class="text-white-50">Liên hệ</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Hỗ trợ khách hàng</h5>
                    <p><i class="fas fa-map-marker-alt"></i> Hà Nội, Việt Nam</p>
                    <p><i class="fas fa-phone"></i> 0356 102 389</p>
                    <p><i class="fas fa-envelope"></i> kimchausatacom67@gmail.com</p>
                </div>
            </div>
            <hr class="bg-white">
            <div class="text-center">
                <p>&copy; 2026 SHOESTKC. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <div class="modal fade" id="searchModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-body">
                    <form asp-action="Search" asp-controller="Home" method="get">
                        <div class="input-group">
                            <input type="text" name="keyword" class="form-control form-control-lg" placeholder="Tìm kiếm sản phẩm..." required>
                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/toast.js" asp-append-version="true"></script>
    <script src="~/js/ux-helpers.js" asp-append-version="true"></script>
    <script src="~/js/price-validation.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Cập nhật số lượng giỏ hàng khi tải trang
        function updateCartCount() {
            fetch('/GioHang/GetCartCount')
                .then(response => response.json())
                .then(data => {
                    const cartBadge = document.getElementById('cartCount');
                    if (data.count > 0) {
                        cartBadge.textContent = data.count;
                        cartBadge.style.display = 'inline-block';
                    } else {
                        cartBadge.style.display = 'none';
                    }
                })
                .catch(error => console.error('Lỗi lấy số lượng giỏ hàng:', error));
        }

        // Gọi khi tải trang
        document.addEventListener('DOMContentLoaded', function() {
            updateCartCount();
            
            // Đảm bảo dropdown links hoạt động
            const dropdownItems = document.querySelectorAll('.dropdown-item');
            dropdownItems.forEach(item => {
                item.addEventListener('click', function(e) {
                    // Cho phép link hoạt động bình thường
                    // Không preventDefault
                });
            });
        });

        // Hàm thêm vào giỏ hàng với Toast
        window.addToCart = function (bienTheId, soLuong = 1) {
            Loading.show('Đang thêm vào giỏ hàng...');
            
            const formData = new FormData();
            formData.append('bienTheId', bienTheId);
            formData.append('soLuong', soLuong);

            fetch('/GioHang/Add', {
                method: 'POST',
                body: formData
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Lỗi mạng');
                }
                return response.json();
            })
            .then(data => {
                Loading.hide();
                if (data.success) {
                    Toast.success(data.message);
                    updateCartCount();
                } else if (data.requireLogin) {
                    ConfirmDialog.show({
                        title: 'Yêu cầu đăng nhập',
                        message: data.message + '\nBạn có muốn đăng nhập ngay?',
                        confirmText: 'Đăng nhập',
                        type: 'info'
                    }).then(confirmed => {
                        if (confirmed) {
                            window.location.href = '/Auth/Login';
                        }
                    });
                } else {
                    Toast.error(data.message);
                }
            })
            .catch(error => {
                Loading.hide();
                Toast.error('Có lỗi xảy ra: ' + error);
            });
        };
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>