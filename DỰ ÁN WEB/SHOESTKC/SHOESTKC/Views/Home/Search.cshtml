@model IEnumerable<SHOESTKC.CSDL.SanPham>

@{
    ViewData["Title"] = "Kết quả tìm kiếm";
    Layout = "~/Views/Shared/_Layout.cshtml";
    // Tính toán số thứ tự bắt đầu
    int startIndex = (ViewBag.CurrentPage - 1) * ViewBag.PageSize + 1;
}

<div class="container my-5">
    <div class="row mb-4">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Kết quả tìm kiếm</li>
                </ol>
            </nav>
            <h2>
                <i class="fas fa-search"></i> Kết quả tìm kiếm
                @if (!string.IsNullOrEmpty(ViewBag.Keyword))
                {
                    <span class="text-primary">: "@ViewBag.Keyword"</span>
                }
            </h2>
        </div>
    </div>

    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-filter"></i> Bộ lọc tìm kiếm</h5>
        </div>
        <div class="card-body">
            <form method="get" action="@Url.Action("Search", "Home")">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Từ khóa</label>
                        <input type="text" name="keyword" class="form-control" placeholder="Nhập từ khóa..." value="@ViewBag.Keyword">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Danh mục</label>
                        <select name="danhMucId" class="form-select">
                            <option value="">-- Tất cả danh mục --</option>
                            @if (ViewBag.DanhMucs != null)
                            {
                                @foreach (var dm in ViewBag.DanhMucs as List<SHOESTKC.CSDL.DanhMuc>)
                                {
                                    <option value="@dm.Id" selected="@(dm.Id == ViewBag.DanhMucId)">@dm.TenDanhMuc</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label fw-bold">Giá từ (VNĐ)</label>
                        <input type="number" name="giaMin" class="form-control" placeholder="0" value="@ViewBag.GiaMin" min="0" step="1000">
                        <small class="price-input-helper">
                            <i class="fas fa-info-circle"></i> Ví dụ: 100000, 500000
                        </small>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label fw-bold">Giá đến (VNĐ)</label>
                        <input type="number" name="giaMax" class="form-control" placeholder="10,000,000" value="@ViewBag.GiaMax" min="0" step="1000">
                        <small class="price-input-helper">
                            <i class="fas fa-info-circle"></i> Ví dụ: 1000000, 5000000
                        </small>
                    </div>
                    <div class="col-md-2 d-flex align-items-end gap-2">
                        <button type="submit" class="btn btn-primary flex-grow-1">
                            <i class="fas fa-search"></i> Tìm
                        </button>
                        <a href="@Url.Action("Search", "Home")" class="btn btn-secondary">
                            <i class="fas fa-redo"></i>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.Keyword) || ViewBag.DanhMucId != null || ViewBag.GiaMin != null || ViewBag.GiaMax != null)
    {
        <div class="alert alert-info border-0 shadow-sm mb-4">
            <div class="d-flex align-items-center">
                <i class="fas fa-info-circle me-2"></i>
                <div>
                    <strong>Kết quả tìm kiếm: @ViewBag.TotalItems sản phẩm</strong>
                    <div class="mt-1">
                        @if (!string.IsNullOrEmpty(ViewBag.Keyword))
                        {
                            <span class="badge bg-primary me-1">
                                <i class="fas fa-search"></i> "@ViewBag.Keyword"
                            </span>
                        }
                        @if (ViewBag.DanhMucId != null && ViewBag.DanhMucs != null)
                        {
                            var dmSelected = (ViewBag.DanhMucs as List<SHOESTKC.CSDL.DanhMuc>)?.FirstOrDefault(dm => dm.Id == ViewBag.DanhMucId);
                            if (dmSelected != null)
                            {
                                <span class="badge bg-secondary me-1">
                                    <i class="fas fa-folder"></i> @dmSelected.TenDanhMuc
                                </span>
                            }
                        }
                        @if (ViewBag.GiaMin != null || ViewBag.GiaMax != null)
                        {
                            <span class="badge bg-success me-1">
                                <i class="fas fa-tag"></i> @(ViewBag.GiaMin?.ToString("N0") ?? "0") - @(ViewBag.GiaMax?.ToString("N0") ?? "∞") VNĐ
                            </span>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100 product-card border-0 shadow-sm">
                        <a asp-action="ChiTiet" asp-route-id="@item.Id" class="text-decoration-none">
                            @if (!string.IsNullOrEmpty(item.AnhChinh))
                            {
                                <img src="@item.AnhChinh" class="card-img-top" alt="@item.TenSanPham"
                                     style="height: 250px; object-fit: cover;" onerror="this.src='/images/no-image.jpg'" />
                            }
                            else
                            {
                                <div class="bg-light d-flex align-items-center justify-content-center" style="height: 250px;">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                </div>
                            }
                            <div class="card-body">
                                <span class="badge bg-info mb-2">@item.DanhMuc?.TenDanhMuc</span>
                                <h6 class="card-title text-dark fw-bold">@item.TenSanPham</h6>
                                <p class="text-muted small mb-2">Hãng: @item.Hang</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="text-primary fw-bold">@item.GiaGoc.ToString("N0")đ</span>
                                    <span class="badge bg-secondary">@item.BienThe?.Count sản phẩm</span>
                                </div>
                            </div>
                        </a>
                        <div class="card-footer bg-white border-0">
                            <a asp-action="ChiTiet" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm w-100">
                                <i class="fas fa-eye"></i> Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (ViewBag.TotalPages > 1)
        {
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="?page=@(ViewBag.CurrentPage - 1)&keyword=@ViewBag.Keyword&danhMucId=@ViewBag.DanhMucId&giaMin=@ViewBag.GiaMin&giaMax=@ViewBag.GiaMax">
                            <i class="fas fa-chevron-left"></i> Trước
                        </a>
                    </li>

                    @{
                        int startPage = Math.Max(1, ViewBag.CurrentPage - 2);
                        int endPage = Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2);
                    }

                    @if (startPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?page=1&keyword=@ViewBag.Keyword&danhMucId=@ViewBag.DanhMucId&giaMin=@ViewBag.GiaMin&giaMax=@ViewBag.GiaMax">1</a>
                        </li>
                        @if (startPage > 2)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                    }

                    @for (int i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" href="?page=@i&keyword=@ViewBag.Keyword&danhMucId=@ViewBag.DanhMucId&giaMin=@ViewBag.GiaMin&giaMax=@ViewBag.GiaMax">@i</a>
                        </li>
                    }

                    @if (endPage < ViewBag.TotalPages)
                    {
                        @if (endPage < ViewBag.TotalPages - 1)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                        <li class="page-item">
                            <a class="page-link" href="?page=@ViewBag.TotalPages&keyword=@ViewBag.Keyword&danhMucId=@ViewBag.DanhMucId&giaMin=@ViewBag.GiaMin&giaMax=@ViewBag.GiaMax">@ViewBag.TotalPages</a>
                        </li>
                    }

                    <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link" href="?page=@(ViewBag.CurrentPage + 1)&keyword=@ViewBag.Keyword&danhMucId=@ViewBag.DanhMucId&giaMin=@ViewBag.GiaMin&giaMax=@ViewBag.GiaMax">
                            Sau <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                </ul>
                <p class="text-center text-muted mt-3">
                    <i class="fas fa-info-circle"></i>
                    Hiển thị <strong>@startIndex</strong> - <strong>@Math.Min(startIndex + ViewBag.PageSize - 1, ViewBag.TotalItems)</strong>
                    trong tổng số <strong>@ViewBag.TotalItems</strong> sản phẩm
                    (Trang <strong>@ViewBag.CurrentPage</strong>/<strong>@ViewBag.TotalPages</strong>)
                </p>
            </nav>
        }
    }
    else
    {
        <div class="text-center py-5 shadow-sm bg-white rounded">
            <i class="fas fa-search fa-5x text-muted mb-4"></i>
            <h3>Không tìm thấy kết quả nào</h3>
            <p class="text-muted mb-4">Vui lòng thử lại với từ khóa hoặc bộ lọc khác</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary px-4">
                <i class="fas fa-home"></i> Về trang chủ
            </a>
        </div>
    }
</div>

<style>
    .product-card {
        transition: transform 0.3s, box-shadow 0.3s;
        border: none;
    }

        .product-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 24px rgba(0,0,0,0.15) !important;
        }

    .page-link {
        color: #0d6efd;
    }

    .page-item.active .page-link {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }
</style>