@model IEnumerable<SHOESTKC.CSDL.SanPham>

@{
    ViewData["Title"] = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Banner Section - SIMPLE & CLEAN -->
<section class="hero-banner">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="hero-content">
                    <span class="badge bg-danger mb-3">🔥 Flash Sale 50%</span>
                    <h1 class="hero-title">Giày Thể Thao Chính Hãng</h1>
                    <p class="hero-subtitle">
                        Bộ sưu tập 2025 từ Nike, Adidas, Converse, Vans<br/>
                        <strong>Miễn phí vận chuyển</strong> cho đơn hàng đầu tiên
                    </p>
                    <div class="hero-features">
                        <div class="feature-item">
                            <i class="fas fa-shipping-fast"></i>
                            <span>Giao 2-3 ngày</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-shield-check"></i>
                            <span>Chính hãng 100%</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-sync-alt"></i>
                            <span>Đổi trả 30 ngày</span>
                        </div>
                    </div>
                    <div class="hero-cta mt-4">
                        <a href="#san-pham-moi" class="btn btn-primary btn-lg">
                            <i class="fas fa-shopping-bag me-2"></i>Mua Ngay
                        </a>
                        <a asp-action="Search" asp-controller="Home" class="btn btn-outline-secondary btn-lg ms-3">
                            Xem Tất Cả
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image">
                    <img src="/images/nen.jpg" alt="Giày thể thao" class="img-fluid" />
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Trust Badges -->
<section class="trust-section">
    <div class="container">
        <div class="row g-3 text-center">
            <div class="col-md-3 col-6">
                <div class="trust-item">
                    <i class="fas fa-shipping-fast"></i>
                    <strong>Giao hàng nhanh</strong>
                    <p>2-3 ngày toàn quốc</p>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="trust-item">
                    <i class="fas fa-certificate"></i>
                    <strong>Chính hãng 100%</strong>
                    <p>Cam kết hàng chính hãng</p>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="trust-item">
                    <i class="fas fa-undo-alt"></i>
                    <strong>Đổi trả miễn phí</strong>
                    <p>Trong vòng 30 ngày</p>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="trust-item">
                    <i class="fas fa-headset"></i>
                    <strong>Hỗ trợ 24/7</strong>
                    <p>Tư vấn nhiệt tình</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Categories Section -->
<section class="categories-section">
    <div class="container">
        <div class="section-header text-center">
            <h2 class="section-title">Danh Mục Sản Phẩm</h2>
        </div>
        <div class="row g-3 justify-content-center">
            @if (ViewBag.DanhMucs != null)
            {
                var allCategories = ViewBag.DanhMucs as List<SHOESTKC.CSDL.DanhMuc>;
                var categories = allCategories.Take(6).ToList();

                @foreach (var dm in categories)
                {
                    <div class="col-lg-2 col-md-4 col-sm-6 col-6">
                        <a asp-action="Category" asp-controller="Home" asp-route-id="@dm.Id" class="text-decoration-none">
                            <div class="category-card">
                                <div class="category-icon">
                                    <i class="fas fa-shoe-prints"></i>
                                </div>
                                <h6 class="category-name">@dm.TenDanhMuc</h6>
                            </div>
                        </a>
                    </div>
                }
            }
        </div>
    </div>
</section>

<!-- Products Section -->
<section class="products-section" id="san-pham-moi">
    <div class="container">
        <div class="section-header d-flex justify-content-between align-items-center">
            <div>
                <h2 class="section-title">Sản Phẩm Mới Nhất</h2>
            </div>
            <a asp-action="Search" asp-controller="Home" class="btn btn-outline-primary">
                Xem tất cả <i class="fas fa-arrow-right ms-2"></i>
            </a>
        </div>

        <div class="row g-3">
            @foreach (var item in Model)
            {
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div class="product-card">
                        <div class="product-badges">
                            <span class="badge bg-danger">Mới</span>
                        </div>
                        <a asp-action="ChiTiet" asp-controller="Home" asp-route-id="@item.Id" class="text-decoration-none">
                            <div class="product-image">
                                @if (!string.IsNullOrEmpty(item.AnhChinh))
                                {
                                    <img src="@item.AnhChinh" alt="@item.TenSanPham" onerror="this.src='/images/no-image.jpg'" />
                                }
                                else
                                {
                                    <div class="no-image">
                                        <i class="fas fa-image"></i>
                                    </div>
                                }
                            </div>
                            <div class="product-info">
                                <div class="product-category">@item.DanhMuc?.TenDanhMuc</div>
                                <h6 class="product-name">@item.TenSanPham</h6>
                                <div class="product-brand">
                                    <i class="fas fa-tag me-1"></i>@item.Hang
                                </div>
                                <div class="product-footer">
                                    <div class="product-price">
                                        <span class="price">@item.GiaGoc.ToString("N0")đ</span>
                                    </div>
                                    <div class="product-rating">
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star-half-alt"></i>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<style>
    /* ===== HERO BANNER ===== */
    .hero-banner {
        background: linear-gradient(135deg, #fff5f0 0%, #ffe8e0 100%);
        padding: 50px 0;
        margin-bottom: 20px;
        border-bottom: 1px solid #f0f0f0;
    }

    .hero-content {
        padding: 20px 0;
    }

    .hero-title {
        font-size: 2.2rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 15px;
        line-height: 1.2;
    }

    .hero-subtitle {
        font-size: 1rem;
        color: #666;
        margin-bottom: 20px;
        line-height: 1.6;
    }

    .hero-subtitle strong {
        color: #ee4d2d;
        font-weight: 600;
    }

    .hero-features {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
        margin-bottom: 20px;
    }

    .feature-item {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.9rem;
        color: #666;
    }

    .feature-item i {
        color: #ee4d2d;
        font-size: 1.1rem;
    }

    .hero-cta .btn {
        padding: 12px 30px;
        font-weight: 500;
        border-radius: 4px;
    }

    .hero-cta .btn-primary {
        background: #ee4d2d;
        border: none;
    }

    .hero-cta .btn-primary:hover {
        background: #d73211;
    }

    .hero-cta .btn-outline-secondary {
        border: 1px solid #ccc;
        color: #666;
    }

    .hero-cta .btn-outline-secondary:hover {
        background: #f5f5f5;
        border-color: #999;
    }

    .hero-image {
        text-align: center;
    }

    .hero-image img {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
    }

    /* ===== TRUST SECTION ===== */
    .trust-section {
        background: #fff;
        padding: 20px 0;
        margin-bottom: 30px;
        border-top: 1px solid #f0f0f0;
        border-bottom: 1px solid #f0f0f0;
    }

    .trust-item {
        padding: 10px;
    }

    .trust-item i {
        font-size: 2rem;
        color: #ee4d2d;
        margin-bottom: 10px;
    }

    .trust-item strong {
        display: block;
        font-size: 0.9rem;
        color: #333;
        margin-bottom: 5px;
    }

    .trust-item p {
        font-size: 0.8rem;
        color: #999;
        margin: 0;
    }

    /* ===== CATEGORIES SECTION ===== */
    .categories-section {
        background: #fff;
        padding: 30px 0;
        margin-bottom: 20px;
    }

    .section-header {
        margin-bottom: 25px;
    }

    .section-title {
        font-size: 1.4rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 0;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .category-card {
        background: #fff;
        border: 1px solid #f0f0f0;
        border-radius: 4px;
        padding: 25px 15px;
        text-align: center;
        transition: all 0.3s;
        height: 100%;
        min-height: 140px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .category-card:hover {
        border-color: #ee4d2d;
        box-shadow: 0 4px 12px rgba(238, 77, 45, 0.15);
        transform: translateY(-3px);
    }

    .category-icon {
        width: 60px;
        height: 60px;
        margin: 0;
        background: linear-gradient(135deg, #fff5f0 0%, #ffe8e0 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #ee4d2d;
        font-size: 1.8rem;
        transition: all 0.3s;
        flex-shrink: 0;
    }

    .category-card:hover .category-icon {
        background: linear-gradient(135deg, #ee4d2d 0%, #ff6b35 100%);
        color: #fff;
        transform: scale(1.1);
    }

    .category-name {
        font-weight: 500;
        color: #333;
        margin: 0;
        font-size: 0.9rem;
        line-height: 1.3;
        word-break: break-word;
    }

    /* ===== PRODUCTS SECTION ===== */
    .products-section {
        background: #fff;
        padding: 30px 0;
        margin-bottom: 30px;
    }

    .product-card {
        background: #fff;
        border: 1px solid #f0f0f0;
        border-radius: 4px;
        overflow: hidden;
        transition: all 0.3s;
        height: 100%;
    }

    .product-card:hover {
        box-shadow: 0 2px 8px rgba(0,0,0,0.15);
        transform: translateY(-2px);
    }

    .product-badges {
        position: absolute;
        top: 8px;
        left: 8px;
        z-index: 10;
    }

    .product-badges .badge {
        padding: 4px 8px;
        border-radius: 2px;
        font-size: 0.7rem;
        font-weight: 500;
    }

    .product-image {
        position: relative;
        width: 100%;
        aspect-ratio: 1;
        background: #f5f5f5;
        overflow: hidden;
    }

    .product-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s;
    }

    .product-card:hover .product-image img {
        transform: scale(1.05);
    }

    .no-image {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #ccc;
        font-size: 3rem;
    }

    .product-info {
        padding: 12px;
    }

    .product-category {
        font-size: 0.75rem;
        color: #999;
        text-transform: uppercase;
        margin-bottom: 5px;
    }

    .product-name {
        font-weight: 500;
        color: #333;
        margin-bottom: 5px;
        font-size: 0.9rem;
        line-height: 1.3;
        min-height: 35px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .product-brand {
        font-size: 0.8rem;
        color: #999;
        margin-bottom: 8px;
    }

    .product-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 8px;
        border-top: 1px solid #f0f0f0;
    }

    .product-price .price {
        font-size: 1.1rem;
        font-weight: 500;
        color: #ee4d2d;
    }

    .product-rating {
        color: #ffce3d;
        font-size: 0.75rem;
    }

    /* ===== RESPONSIVE ===== */
    @@media (max-width: 991px) {
        .hero-title {
            font-size: 2rem;
        }

        .hero-image {
            margin-top: 30px;
        }
    }

    @@media (max-width: 767px) {
        .hero-title {
            font-size: 1.75rem;
        }

        .hero-cta .btn {
            padding: 10px 20px;
            font-size: 0.9rem;
        }

        .hero-cta .btn-outline-secondary {
            margin-left: 0 !important;
            margin-top: 10px;
        }

        .trust-item i {
            font-size: 1.5rem;
        }

        .section-title {
            font-size: 1.2rem;
        }

        .category-card {
            min-height: 110px;
            padding: 15px 10px;
        }

        .category-icon {
            width: 45px;
            height: 45px;
            font-size: 1.3rem;
        }

        .category-name {
            font-size: 0.8rem;
        }
    }
</style>