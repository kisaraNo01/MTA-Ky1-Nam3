@model IEnumerable<SHOESTKC.CSDL.DonHang>

@{
    ViewData["Title"] = "Đơn hàng của tôi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <h2 class="mb-4"><i class="fas fa-box"></i> Đơn hàng của tôi</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="card text-center py-5">
            <div class="card-body">
                <i class="fas fa-box-open fa-5x text-muted mb-3"></i>
                <h4>Chưa có đơn hàng nào</h4>
                <p class="text-muted">Bạn chưa đặt đơn hàng nào. Hãy bắt đầu mua sắm ngay!</p>
                <a asp-action="Index" asp-controller="Home" class="btn btn-primary mt-3">
                    <i class="fas fa-shopping-bag"></i> Mua sắm ngay
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var order in Model)
            {
                <div class="col-12 mb-4">
                    <div class="card">
                        <div class="card-header bg-light">
                            <div class="row align-items-center">
                                <div class="col-md-3">
                                    <strong>Mã đơn:</strong> @order.MaDonHang
                                </div>
                                <div class="col-md-3">
                                    <small class="text-muted">
                                        <i class="fas fa-calendar"></i> 
                                        @order.NgayTao?.ToString("dd/MM/yyyy HH:mm")
                                    </small>
                                </div>
                                <div class="col-md-3">
                                    @{
                                        var statusClass = order.TrangThaiDonHang switch
                                        {
                                            "Chờ xác nhận" => "bg-warning",
                                            "Đã xác nhận" => "bg-info",
                                            "Đang giao" => "bg-primary",
                                            "Đã giao" => "bg-success",
                                            "Đã hủy" => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @statusClass">@order.TrangThaiDonHang</span>
                                </div>
                                <div class="col-md-3 text-end">
                                    <strong class="text-danger">@order.TongTien.ToString("N0")đ</strong>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                @foreach (var item in order.ChiTietDonHang.Take(3))
                                {
                                    <div class="col-md-4 mb-3">
                                        <div class="d-flex">
                                            <img src="@item.BienThe.SanPham.AnhChinh" 
                                                 alt="@item.BienThe.SanPham.TenSanPham"
                                                 class="rounded me-2" 
                                                 style="width: 60px; height: 60px; object-fit: cover;">
                                            <div>
                                                <h6 class="mb-1">@item.BienThe.SanPham.TenSanPham</h6>
                                                <small class="text-muted">
                                                    @item.BienThe.MauSac | @item.BienThe.Size | x@item.SoLuong
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                }
                                @if (order.ChiTietDonHang.Count > 3)
                                {
                                    <div class="col-md-12">
                                        <small class="text-muted">
                                            ... và @(order.ChiTietDonHang.Count - 3) sản phẩm khác
                                        </small>
                                    </div>
                                }
                            </div>

                            <hr>

                            <div class="row">
                                <div class="col-md-6">
                                    <small>
                                        <i class="fas fa-map-marker-alt"></i> 
                                        <strong>Địa chỉ:</strong> @order.DiaChiGiao
                                    </small>
                                </div>
                                <div class="col-md-6 text-end">
                                    <a asp-action="OrderDetail" asp-route-id="@order.Id" 
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i> Xem chi tiết
                                    </a>
                                    
                                    @if (order.TrangThaiDonHang == "Chờ xác nhận")
                                    {
                                        <button class="btn btn-sm btn-outline-danger" 
                                                onclick="cancelOrder(@order.Id)">
                                            <i class="fas fa-times"></i> Hủy đơn
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        function cancelOrder(orderId) {
            if (!confirm('Bạn có chắc muốn hủy đơn hàng này?')) return;
            
            // TODO: Implement cancel order functionality
            alert('Chức năng hủy đơn hàng đang được phát triển. Vui lòng liên hệ hotline để hủy đơn.');
        }
    </script>
}
