@model SHOESTKC.CSDL.DonHang

@{
    ViewData["Title"] = "Đặt hàng thành công";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Success Message -->
            <div class="card border-success mb-4">
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 80px;"></i>
                    </div>
                    <h2 class="text-success mb-3">Đặt hàng thành công!</h2>
                    <p class="lead mb-4">Cảm ơn bạn đã mua hàng tại cửa hàng của chúng tôi.</p>
                    <div class="alert alert-info">
                        <strong>Mã đơn hàng:</strong> <span class="fs-5">@Model.MaDonHang</span>
                    </div>
                </div>
            </div>

            <!-- Order Details -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-info-circle"></i> Thông tin đơn hàng</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Ngày đặt:</strong><br>
                            @Model.NgayTao?.ToString("dd/MM/yyyy HH:mm")
                        </div>
                        <div class="col-md-6">
                            <strong>Trạng thái:</strong><br>
                            <span class="badge bg-warning">@Model.TrangThaiDonHang</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Phương thức thanh toán:</strong><br>
                            @Model.PhuongThucThanhToan
                        </div>
                        <div class="col-md-6">
                            <strong>Trạng thái thanh toán:</strong><br>
                            <span class="badge @(Model.TrangThaiThanhToan == "Đã thanh toán" ? "bg-success" : "bg-secondary")">
                                @Model.TrangThaiThanhToan
                            </span>
                        </div>
                    </div>

                    <hr>

                    <div class="mb-3">
                        <strong><i class="fas fa-map-marker-alt"></i> Địa chỉ giao hàng:</strong><br>
                        @Model.DiaChiGiao
                    </div>

                    <div class="mb-3">
                        <strong><i class="fas fa-phone"></i> Số điện thoại:</strong><br>
                        @Model.SoDienThoai
                    </div>
                </div>
            </div>

            <!-- Order Items -->
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-shopping-bag"></i> Sản phẩm đã đặt</h5>
                </div>
                <div class="card-body">
                    @foreach (var item in Model.ChiTietDonHang)
                    {
                        <div class="row mb-3 pb-3 border-bottom">
                            <div class="col-md-2">
                                <img src="@item.BienThe.SanPham.AnhChinh" alt="@item.BienThe.SanPham.TenSanPham"
                                     class="img-fluid rounded">
                            </div>
                            <div class="col-md-5">
                                <h6>@item.BienThe.SanPham.TenSanPham</h6>
                                <small class="text-muted">
                                    Màu: @item.BienThe.MauSac | Size: @item.BienThe.Size
                                </small>
                            </div>
                            <div class="col-md-2 text-center">
                                <strong>x @item.SoLuong</strong>
                            </div>
                            <div class="col-md-3 text-end">
                                <strong class="text-danger">@item.ThanhTien.ToString("N0")đ</strong>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Order Summary -->
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-calculator"></i> Tổng kết đơn hàng</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Tạm tính:</span>
                        <strong>@Model.TamTinh.ToString("N0")đ</strong>
                    </div>

                    <div class="d-flex justify-content-between mb-2">
                        <span>Phí vận chuyển:</span>
                        <strong>@Model.PhiVanChuyen?.ToString("N0")đ</strong>
                    </div>

                    @if (Model.TienGiam.HasValue && Model.TienGiam > 0)
                    {
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-success">
                                <i class="fas fa-tag"></i> Giảm giá
                                @if (Model.MaKhuyenMai != null)
                                {
                                    <small>(@Model.MaKhuyenMai.MaCode)</small>
                                }
                            </span>
                            <strong class="text-success">-@Model.TienGiam.Value.ToString("N0")đ</strong>
                        </div>
                    }

                    <hr>

                    <div class="d-flex justify-content-between">
                        <strong class="fs-5">Tổng cộng:</strong>
                        <strong class="text-danger fs-4">@Model.TongTien.ToString("N0")đ</strong>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="text-center">
                <a asp-action="MyOrders" class="btn btn-primary btn-lg me-2">
                    <i class="fas fa-list"></i> Xem đơn hàng của tôi
                </a>
                <a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary btn-lg">
                    <i class="fas fa-home"></i> Về trang chủ
                </a>
            </div>

            <!-- Additional Info -->
            <div class="alert alert-info mt-4">
                <h6><i class="fas fa-info-circle"></i> Lưu ý:</h6>
                <ul class="mb-0">
                    <li>Đơn hàng của bạn đang được xử lý và sẽ được giao trong vòng 2-3 ngày làm việc.</li>
                    <li>Bạn có thể theo dõi trạng thái đơn hàng trong mục "Đơn hàng của tôi".</li>
                    <li>Nếu có bất kỳ thắc mắc nào, vui lòng liên hệ hotline: <strong>1900-xxxx</strong></li>
                </ul>
            </div>
        </div>
    </div>
</div>
