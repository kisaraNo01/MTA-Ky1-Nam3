@model QuanLyBenhXa.Models.BenhNhan
@using Microsoft.AspNetCore.Identity
@using QuanLyBenhXa.Models
@using Microsoft.EntityFrameworkCore
@inject UserManager<ApplicationUser> UserManager
@inject QuanLyBenhXa.Models.ApplicationDbContext Context

@{
    ViewData["Title"] = "Chi tiết bệnh nhân";
    var currentUser = await UserManager.GetUserAsync(User);
    var isBacSi = User.IsInRole("BacSi");
    var isAdmin = User.IsInRole("Admin");
    var isNhanVien = User.IsInRole("NhanVien");
    
    // Get current Doctor Name if applicable
    BacSi currentBacSi = null;
    if (isBacSi && currentUser != null)
    {
        currentBacSi = await Context.BacSis.FindAsync(currentUser.BacSiId);
    }
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <!-- Patient Info Card -->
            <div class="card border-0 mb-4">
                <div class="card-header bg-white p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0 fw-bold text-primary">Hồ sơ bệnh nhân</h4>
                        @if (isAdmin || isNhanVien)
                        {
                            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-pencil me-1"></i> Sửa
                            </a>
                        }
                    </div>
                </div>
                <div class="card-body p-4">
                    <dl class="row g-3">
                        <dt class="col-sm-3 text-secondary">@Html.DisplayNameFor(model => model.HoTen)</dt>
                        <dd class="col-sm-9 fw-bold fs-5">@Html.DisplayFor(model => model.HoTen)</dd>

                        <dt class="col-sm-3 text-secondary">@Html.DisplayNameFor(model => model.NgaySinh)</dt>
                        <dd class="col-sm-3">@Html.DisplayFor(model => model.NgaySinh)</dd>

                        <dt class="col-sm-3 text-secondary">@Html.DisplayNameFor(model => model.GioiTinh)</dt>
                        <dd class="col-sm-3">@Html.DisplayFor(model => model.GioiTinh)</dd>
                        
                            <dt class="col-sm-3 text-secondary">@Html.DisplayNameFor(model => model.CapBac)</dt>
                            <dd class="col-sm-3"><span class="badge bg-success">@Html.DisplayFor(model => model.CapBac)</span></dd>

                            <dt class="col-sm-3 text-secondary">@Html.DisplayNameFor(model => model.DonVi)</dt>
                            <dd class="col-sm-3">@Html.DisplayFor(model => model.DonVi)</dd>
                            
                            <dt class="col-sm-3 text-secondary">@Html.DisplayNameFor(model => model.SoBHYT)</dt>
                            <dd class="col-sm-3">@Html.DisplayFor(model => model.SoBHYT)</dd>

                            <dt class="col-sm-3 text-secondary">@Html.DisplayNameFor(model => model.ChucVu)</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.ChucVu)</dd>
                    </dl>
                </div>
            </div>

            <!-- Medical History -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="fw-bold text-primary mb-0">Lịch sử Khám bệnh</h5>
                @if (isAdmin || isNhanVien)
                {
                    <a asp-controller="HoSoKhamBenh" asp-action="Create" asp-route-benhNhanId="@Model?.Id" class="btn btn-sm btn-success rounded-pill px-3 shadow-sm">
                        <i class="bi bi-plus-lg me-1"></i> Tạo hồ sơ mới
                    </a>
                }
            </div>

            @if (Model?.HoSoKhamBenhs != null && Model.HoSoKhamBenhs.Any())
            {
                <div class="accordion" id="accordionHoSo">
                    @foreach (var hs in Model.HoSoKhamBenhs.OrderByDescending(h => h.NgayKham))
                    {
                        var collapseId = "collapse_" + hs.Id;
                        var completedClinics = hs.KetQuaKhamBenhs?.Select(k => k.TenPhongKham).ToList() ?? new List<string>();
                        var requestedClinics = hs.PhongYeuCau?.Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries).ToList() ?? new List<string>();
                        var isGeneralDone = completedClinics.Contains("Đa khoa");
                        var pendingClinics = requestedClinics.Where(rc => !completedClinics.Contains(rc)).ToList();
                        var isAllDone = isGeneralDone && !pendingClinics.Any();

                        <div class="accordion-item shadow-sm border-0 mb-3 rounded-3 overflow-hidden">
                            <h2 class="accordion-header">
                                <button class="accordion-button @(hs == Model.HoSoKhamBenhs.Last() ? "" : "collapsed")" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId">
                                    <div class="d-flex w-100 justify-content-between align-items-center pe-3">
                                        <div class="fw-bold">
                                            <span class="text-primary me-2">@hs.NgayKham.ToShortDateString()</span>
                                            <span class="text-muted small fw-normal">BS: @hs.BacSiPhuTrach</span>
                                        </div>
                                        <div>
                                            @if (!string.IsNullOrEmpty(hs.KetLuan))
                                            {
                                                <span class="badge bg-success">Đã kết luận</span>
                                            }
                                            else if (isAllDone)
                                            {
                                                <span class="badge bg-warning text-dark">Chờ kết luận</span>
                                            }
                                            else
                                            {
                                                 <span class="badge bg-secondary">Đang khám</span>
                                            }
                                        </div>
                                    </div>
                                </button>
                            </h2>
                            <div id="@collapseId" class="accordion-collapse collapse @(hs == Model.HoSoKhamBenhs.OrderByDescending(h => h.NgayKham).First() ? "show" : "")" data-bs-parent="#accordionHoSo">
                                <div class="accordion-body bg-light">
                                    <div class="mb-3">
                                        <strong>Triệu chứng ban đầu:</strong> <span class="text-muted">@hs.TrieuChung</span>
                                    </div>

                                    <!-- Action Buttons Logic -->
                                    <div class="d-flex flex-wrap gap-2 mb-4 p-3 bg-white rounded shadow-sm border border-light">
                                        <span class="fw-bold text-secondary align-self-center me-2">Tiếp nhận / Chỉ định:</span>
                                        
                                        @if (!isGeneralDone)
                                        {
                                            var canExamGeneral = isAdmin || (currentBacSi != null && currentBacSi.Ten == hs.BacSiPhuTrach && currentBacSi.PhongKham == "Đa khoa"); // Only Responsible Doctor can do General Exam? Or any General Doctor? Prompt: "BacSi (PhuTrach)... Can select subsequent...". Usually General Exam is done by PhuTrach.
                                            // Keep it simple: Responsible Doctor.

                                            if (canExamGeneral) {
                                                <a asp-controller="KetQuaKhamBenh" asp-action="Create" asp-route-hosoId="@hs.Id" asp-route-phongKham="Đa khoa" class="btn btn-primary rounded-pill px-3 animate-pulse">
                                                    <i class="bi bi-stethoscope me-1"></i> Khám Đa khoa (Bắt buộc)
                                                </a>
                                            }
                                        }
                                        else
                                        {
                                            <button class="btn btn-outline-secondary rounded-pill px-3" disabled>
                                                <i class="bi bi-check-circle-fill text-success me-1"></i> Đa khoa (Đã khám)
                                            </button>
                                            
                                            // Assign Clinics Logic for Attending Doctor
                                            var isResponsibleDoctor = isAdmin || (currentBacSi != null && currentBacSi.Ten == hs.BacSiPhuTrach);
                                            if (isResponsibleDoctor)
                                            {
                                                <!-- Assign Clinics Modal Trigger or Inline Form -->
                                                <button class="btn btn-outline-primary rounded-pill px-3" type="button" data-bs-toggle="collapse" data-bs-target="#assignClinics_@hs.Id" aria-expanded="false">
                                                    <i class="bi bi-pencil-square me-1"></i> Chỉ định khám thêm
                                                </button>
                                            }

                                            @foreach (var rc in requestedClinics)
                                            {
                                                if (completedClinics.Contains(rc))
                                                {
                                                     <button class="btn btn-outline-secondary rounded-pill px-3" disabled>
                                                        <i class="bi bi-check-circle-fill text-success me-1"></i> @rc (Đã khám)
                                                    </button>
                                                }
                                                else
                                                {
                                                    // Check access to exam this clinic
                                                    var canExamClinic = isAdmin || (currentBacSi != null && currentBacSi.PhongKham == rc);
                                                    
                                                    if (canExamClinic) {
                                                         <a asp-controller="KetQuaKhamBenh" asp-action="Create" asp-route-hosoId="@hs.Id" asp-route-phongKham="@rc" class="btn btn-warning rounded-pill px-3 text-dark">
                                                            <i class="bi bi-activity me-1"></i> Khám @rc
                                                        </a>
                                                    } else {
                                                         <button class="btn btn-light rounded-pill px-3 text-muted border" disabled>
                                                            <i class="bi bi-lock me-1"></i> Khám @rc
                                                        </button>
                                                    }
                                                }
                                            }
                                        }
                                    </div>
                                    
                                    <!-- Assign Clinics Form -->
                                    <div class="collapse mb-3" id="assignClinics_@hs.Id">
                                        <div class="card card-body border-primary bg-white">
                                            <h6 class="fw-bold text-primary mb-2">Chỉ định phòng khám chuyên khoa:</h6>
                                            <form asp-controller="HoSoKhamBenh" asp-action="UpdatePhongYeuCau" method="post">
                                                <input type="hidden" name="id" value="@hs.Id" />
                                                <div class="d-flex flex-wrap gap-3 mb-3">
                                                    @{
                                                        var clinics = new[] { "Tim mạch", "Da liễu", "Xét nghiệm", "Siêu âm" };
                                                    }
                                                    @foreach (var clinic in clinics)
                                                    {
                                                        var isChecked = requestedClinics.Contains(clinic);
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" name="phongYeuCau" value="@clinic" id="check_@hs.Id@clinic" @(isChecked ? "checked" : "")>
                                                            <label class="form-check-label" for="check_@hs.Id@clinic">@clinic</label>
                                                        </div>
                                                    }
                                                </div>
                                                <button type="submit" class="btn btn-sm btn-primary">Lưu chỉ định</button>
                                            </form>
                                        </div>
                                    </div>

                                    <!-- Results List -->
                                    @if (hs.KetQuaKhamBenhs != null && hs.KetQuaKhamBenhs.Any())
                                    {
                                        <h6 class="small text-uppercase text-secondary fw-bold">Kết quả khám lâm sàng</h6>
                                        <div class="list-group mb-4 shadow-sm">
                                            @foreach (var kq in hs.KetQuaKhamBenhs)
                                            {
                                                <a asp-controller="KetQuaKhamBenh" asp-action="Details" asp-route-id="@kq.Id" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center p-3 border-start border-4 border-primary">
                                                    <div>
                                                        <strong>@kq.TenPhongKham</strong>
                                                        <div class="small text-muted">BS: @kq.BacSiThucHien</div>
                                                    </div>
                                                    <i class="bi bi-chevron-right text-muted"></i>
                                                </a>
                                            }
                                        </div>
                                    }

                                    <!-- Conclusion & Prescription Section (Only if all done) -->
                                    @if (isAllDone)
                                    {
                                        var canConclude = isAdmin || (currentBacSi != null && currentBacSi.Ten == hs.BacSiPhuTrach);

                                        if (canConclude)
                                        {
                                            <div class="card border-success mb-3">
                                                <div class="card-header bg-success text-white fw-bold">
                                                    <i class="bi bi-check2-all me-2"></i> Kết luận & Đơn thuốc
                                                </div>
                                                <div class="card-body">
                                                    <div class="mb-3">
                                                        <label class="fw-bold mb-2">Kết luận của bác sĩ:</label>
                                                        <form asp-controller="HoSoKhamBenh" asp-action="UpdateKetLuan" method="post" class="d-flex gap-2">
                                                            <input type="hidden" name="id" value="@hs.Id" />
                                                            <div class="flex-grow-1">
                                                                <textarea name="ketLuan" class="form-control" rows="2" placeholder="Nhập kết luận khám bệnh...">@hs.KetLuan</textarea>
                                                            </div>
                                                            <button type="submit" class="btn btn-primary align-self-start">
                                                                <i class="bi bi-save me-1"></i> Lưu
                                                            </button>
                                                        </form>
                                                    </div>

                                                    <hr />

                                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                                        <h6 class="fw-bold text-success mb-0">Đơn thuốc</h6>
                                                        <a asp-controller="DonThuoc" asp-action="Create" asp-route-hosoId="@hs.Id" class="btn btn-sm btn-outline-success">
                                                            <i class="bi bi-capsule me-1"></i> Thêm thuốc
                                                        </a>
                                                    </div>

                                                    @if (hs.DonThuocs != null && hs.DonThuocs.Any())
                                                    {
                                                        <table class="table table-sm table-bordered">
                                                            <thead>
                                                                <tr class="table-success">
                                                                    <th>Thuốc</th>
                                                                    <th>Số lượng</th>
                                                                    <th>Cách dùng</th>
                                                                    <th></th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var dt in hs.DonThuocs)
                                                                {
                                                                    <tr>
                                                                        <td>@dt.Thuoc?.TenThuoc</td>
                                                                        <td>@dt.SoLuong @dt.Thuoc?.DonViTinh</td>
                                                                        <td>@dt.CachDung</td>
                                                                        <td class="text-end" style="width: 50px;">
                                                                            <form asp-controller="DonThuoc" asp-action="Delete" asp-route-id="@dt.Id" method="post" onsubmit="return confirm('Xóa thuốc này?');">
                                                                                <button type="submit" class="btn btn-xs btn-link text-danger p-0"><i class="bi bi-x-circle"></i></button>
                                                                            </form>
                                                                        </td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    }
                                                    else
                                                    {
                                                        <div class="text-muted small fst-italic">Chưa có thuốc nào trong đơn.</div>
                                                    }
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="alert alert-info">
                                                <i class="bi bi-info-circle me-1"></i> Hồ sơ này đang chờ kết luận của Bác sĩ phụ trách (<strong>@hs.BacSiPhuTrach</strong>).
                                            </div>
                                            @if (!string.IsNullOrEmpty(hs.KetLuan))
                                            {
                                                <div class="mb-3 p-3 bg-light rounded border">
                                                    <strong>Kết luận:</strong> @hs.KetLuan
                                                </div>
                                                @if (hs.DonThuocs != null && hs.DonThuocs.Any())
                                                {
                                                    <h6 class="fw-bold text-success">Đơn thuốc đã kê:</h6>
                                                    <ul>
                                                        @foreach(var dt in hs.DonThuocs)
                                                        {
                                                            <li>@dt.Thuoc?.TenThuoc (@dt.SoLuong @dt.Thuoc?.DonViTinh) - @dt.CachDung</li>
                                                        }
                                                    </ul>
                                                }
                                            }
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-light border text-center text-muted py-5 rounded-3">
                    <i class="bi bi-folder2-open display-4 d-block mb-3 opacity-50"></i>
                    Chưa có hồ sơ khám bệnh nào. <br/>
                    Nhấn nút <strong>Tạo hồ sơ mới</strong> để bắt đầu.
                </div>
            }

            <div class="mt-4 text-center">
                <a asp-action="Index" class="btn btn-outline-secondary">Quay lại danh sách bệnh nhân</a>
            </div>
        </div>
    </div>
</div>

<style>
    .animate-pulse {
        animation: pulse 2s infinite;
    }
    @@keyframes pulse {
        0% { box-shadow: 0 0 0 0 rgba(13, 110, 253, 0.4); }
        70% { box-shadow: 0 0 0 10px rgba(13, 110, 253, 0); }
        100% { box-shadow: 0 0 0 0 rgba(13, 110, 253, 0); }
    }
</style>
