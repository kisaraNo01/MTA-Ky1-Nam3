@model IEnumerable<QuanLyBenhXa.Models.BenhNhan>

@{
    ViewData["Title"] = "Danh sách Bệnh nhân";
    var showActions = User.IsInRole("Admin") || User.IsInRole("NhanVien");
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-primary fw-bold text-uppercase">Danh sách Bệnh nhân</h1>
        @if (showActions)
        {
            <a asp-action="Create" class="btn btn-primary px-4">
                <i class="bi bi-plus-lg me-2"></i>Thêm mới
            </a>
        }
    </div>

    <div class="card border-0 border-top border-3 border-primary">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-white text-primary border-bottom border-primary">
                        <tr>
                            <th class="ps-4 py-3">@Html.DisplayNameFor(model => model.HoTen)</th>
                            <th class="py-3">@Html.DisplayNameFor(model => model.NgaySinh)</th>
                            <th class="py-3">@Html.DisplayNameFor(model => model.GioiTinh)</th>
                            <th class="py-3">@Html.DisplayNameFor(model => model.CapBac)</th>
                            <th class="py-3">@Html.DisplayNameFor(model => model.DonVi)</th>
                            <th class="text-end pe-4 py-3">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                            <tr>
                                <td class="ps-4 fw-bold text-dark">@Html.DisplayFor(modelItem => item.HoTen)</td>
                                <td>@Html.DisplayFor(modelItem => item.NgaySinh)</td>
                                <td>@Html.DisplayFor(modelItem => item.GioiTinh)</td>
                                <td><span class="badge border border-info text-info bg-transparent">@Html.DisplayFor(modelItem => item.CapBac)</span></td>
                                <td>@Html.DisplayFor(modelItem => item.DonVi)</td>
                                <td class="text-end pe-4">
                                    <div class="btn-group" role="group">
                                        @if (showActions)
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Sửa" data-bs-toggle="tooltip">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                        }
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Chi tiết" data-bs-toggle="tooltip">
                                            <i class="bi bi-info-circle"></i>
                                        </a>
                                        @if (showActions)
                                        {
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Xóa" data-bs-toggle="tooltip">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    // Initialize tooltips
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl)
    })
</script>
