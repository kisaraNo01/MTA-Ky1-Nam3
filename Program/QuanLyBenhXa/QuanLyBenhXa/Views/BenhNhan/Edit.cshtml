@model QuanLyBenhXa.Models.BenhNhan

@{
    ViewData["Title"] = "Chỉnh sửa Bệnh nhân";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0 rounded-4">
                <div class="card-header bg-warning text-dark p-4 rounded-top-4">
                    <h4 class="mb-0 fw-bold">Chỉnh sửa thông tin</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="HoTen" class="form-label fw-semibold text-secondary"></label>
                                <input asp-for="HoTen" class="form-control" />
                                <span asp-validation-for="HoTen" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="NgaySinh" class="form-label fw-semibold text-secondary"></label>
                                <input asp-for="NgaySinh" class="form-control" />
                                <span asp-validation-for="NgaySinh" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="GioiTinh" class="form-label fw-semibold text-secondary"></label>
                                <select asp-for="GioiTinh" class="form-select">
                                    <option value="">-- Chọn giới tính --</option>
                                    <option value="Nam">Nam</option>
                                    <option value="Nữ">Nữ</option>
                                </select>
                                <span asp-validation-for="GioiTinh" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="SoBHYT" class="form-label fw-semibold text-secondary"></label>
                                <input asp-for="SoBHYT" class="form-control" />
                                <span asp-validation-for="SoBHYT" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="CapBac" class="form-label fw-semibold text-secondary"></label>
                                <select asp-for="CapBac" class="form-select" asp-items="ViewBag.CapBacList">
                                    <option value="">-- Chọn cấp bậc --</option>
                                </select>
                                <span asp-validation-for="CapBac" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="ChucVu" class="form-label fw-semibold text-secondary"></label>
                                <input asp-for="ChucVu" class="form-control" />
                                <span asp-validation-for="ChucVu" class="text-danger"></span>
                            </div>
                             <div class="col-12">
                                <label asp-for="DonVi" class="form-label fw-semibold text-secondary"></label>
                                <input asp-for="DonVi" class="form-control" />
                                <span asp-validation-for="DonVi" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mt-4 d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-light border">Hủy bỏ</a>
                            <button type="submit" class="btn btn-warning px-4">Cập nhật</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
