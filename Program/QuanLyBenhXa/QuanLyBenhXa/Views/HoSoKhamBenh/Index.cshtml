@model IEnumerable<QuanLyBenhXa.Models.HoSoKhamBenh>

@{
    ViewData["Title"] = "Quản lý Hồ sơ khám bệnh";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h2 class="fw-bold text-primary text-uppercase border-start border-3 border-primary ps-3">Quản lý Hồ sơ khám bệnh</h2>
            <p class="text-secondary ps-3 mb-0">Danh sách tất cả hồ sơ khám bệnh (Admin)</p>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="bg-light text-primary">
                    <tr>
                        <th class="ps-4">Mã HS</th>
                        <th>Bệnh nhân</th>
                        <th>Ngày khám</th>
                        <th>Bác sĩ phụ trách</th>
                        <th>Kết luận</th>
                        <th>Trạng thái</th>
                        <th class="text-end pe-4">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">#@item.Id</td>
                                <td class="fw-bold">@item.BenhNhan?.HoTen</td>
                                <td>@item.NgayKham.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@item.BacSiPhuTrach</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.KetLuan))
                                    {
                                        <span class="text-success"><i class="bi bi-check-circle me-1"></i>Đã kết luận</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted"><i class="bi bi-hourglass me-1"></i>Đang khám</span>
                                    }
                                </td>
                                <td>
                                    @if (item.DaThanhToan)
                                    {
                                        <span class="badge bg-success">Đã thanh toán</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Chờ thanh toán</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-controller="BenhNhan" asp-action="Details" asp-route-id="@item.BenhNhanId" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye me-1"></i>Chi tiết
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center py-4 text-muted">Chưa có hồ sơ khám bệnh nào.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
