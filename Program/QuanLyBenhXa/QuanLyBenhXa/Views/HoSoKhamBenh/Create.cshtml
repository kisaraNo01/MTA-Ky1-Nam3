@model QuanLyBenhXa.Models.HoSoKhamBenh

@{
    ViewData["Title"] = "Tạo hồ sơ khám bệnh";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0 rounded-4">
                <div class="card-header bg-success text-white p-4 rounded-top-4">
                    <h4 class="mb-0 fw-bold">Tạo hồ sơ khám bệnh</h4>
                    @if (ViewBag.BenhNhan != null)
                    {
                        var bn = (QuanLyBenhXa.Models.BenhNhan)ViewBag.BenhNhan;
                        <div class="mt-3 fs-6">
                            <div class="row">
                                <div class="col-md-6">
                                    <p class="mb-1"><i class="bi bi-person-circle me-2"></i>Họ tên: <strong>@bn.HoTen</strong></p>
                                    <p class="mb-1"><i class="bi bi-calendar me-2"></i>Ngày sinh: @bn.NgaySinh.ToShortDateString() (@(DateTime.Now.Year - bn.NgaySinh.Year) tuổi)</p>
                                    <p class="mb-0"><i class="bi bi-card-text me-2"></i>Số BHYT: @bn.SoBHYT</p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-1"><i class="bi bi-shield-shaded me-2"></i>Cấp bậc: @bn.CapBac</p>
                                    <p class="mb-1"><i class="bi bi-briefcase me-2"></i>Chức vụ: @bn.ChucVu</p>
                                    <p class="mb-0"><i class="bi bi-building me-2"></i>Đơn vị: @bn.DonVi</p>
                                </div>
                            </div>
                        </div>
                    }
                    else 
                    {
                        <p class="mb-0 mt-2 opacity-75">Bệnh nhân: <strong>@ViewBag.BenhNhanName</strong></p>
                    }
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="BenhNhanId" value="@ViewBag.BenhNhanId" />
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="NgayKham" class="form-label fw-semibold text-secondary"></label>
                                <input asp-for="NgayKham" class="form-control" />
                                <span asp-validation-for="NgayKham" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="BacSiPhuTrach" class="form-label fw-semibold text-secondary"></label>
                                <select asp-for="BacSiPhuTrach" class="form-select" asp-items="ViewBag.BacSiList">
                                    <option value="">-- Chọn bác sĩ --</option>
                                </select>
                                <span asp-validation-for="BacSiPhuTrach" class="text-danger"></span>
                            </div>
                            
                            <div class="col-12">
                                <label asp-for="TrieuChung" class="form-label fw-semibold text-secondary"></label>
                                <textarea asp-for="TrieuChung" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="TrieuChung" class="text-danger"></span>
                            </div>

                        </div>

                        <div class="mt-4 d-flex justify-content-end gap-2">
                             <a asp-controller="BenhNhan" asp-action="Details" asp-route-id="@ViewBag.BenhNhanId" class="btn btn-light border">Hủy bỏ</a>
                            <button type="submit" class="btn btn-success px-4">Lưu hồ sơ</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
