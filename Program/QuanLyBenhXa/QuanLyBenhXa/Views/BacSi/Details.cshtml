@model QuanLyBenhXa.Models.BacSi

@{
    ViewData["Title"] = "Chi tiết Bác sĩ";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0 rounded-4">
                <div class="card-header bg-info text-white p-4 rounded-top-4">
                    <h4 class="mb-0 fw-bold">Chi tiết Bác sĩ</h4>
                    <div class="card-actions float-end">
                         <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-light btn-sm">
                            <i class="bi bi-pencil me-1"></i> Sửa
                        </a>
                    </div>
                </div>
                <div class="card-body p-4">
                    <dl class="row g-3">
                        <dt class="col-sm-4 text-secondary">@Html.DisplayNameFor(model => model.Ten)</dt>
                        <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.Ten)</dd>

                        <dt class="col-sm-4 text-secondary">@Html.DisplayNameFor(model => model.NgaySinh)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NgaySinh)</dd>

                        <dt class="col-sm-4 text-secondary">@Html.DisplayNameFor(model => model.GioiTinh)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.GioiTinh)</dd>
                        
                        <dt class="col-sm-4 text-secondary">@Html.DisplayNameFor(model => model.CapBac)</dt>
                        <dd class="col-sm-8"><span class="badge bg-success">@Html.DisplayFor(model => model.CapBac)</span></dd>

                        <dt class="col-sm-4 text-secondary">@Html.DisplayNameFor(model => model.ChucVu)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ChucVu)</dd>

                        <dt class="col-sm-4 text-secondary">@Html.DisplayNameFor(model => model.PhongKham)</dt>
                        <dd class="col-sm-8"><span class="badge bg-primary">@Html.DisplayFor(model => model.PhongKham)</span></dd>
                    </dl>
                    
                    <div class="mt-4 text-center">
                        <a asp-action="Index" class="btn btn-outline-secondary">Quay lại danh sách</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
