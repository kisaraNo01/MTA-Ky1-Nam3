@model QuanLyBenhXa.Models.BacSi

@{
    ViewData["Title"] = "Xóa Bác sĩ";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0 rounded-4">
                <div class="card-header bg-danger text-white p-4 rounded-top-4">
                    <h4 class="mb-0 fw-bold">Xác nhận xóa</h4>
                </div>
                <div class="card-body p-4 text-center">
                    <div class="mb-4">
                        <i class="bi bi-exclamation-triangle-fill text-warning display-1"></i>
                    </div>
                    <h5 class="mb-3">Bạn có chắc chắn muốn xóa bác sĩ này?</h5>
                    <p class="text-muted mb-4">
                        <strong>@Html.DisplayFor(model => model.Ten)</strong> - @Html.DisplayFor(model => model.CapBac)<br />
                        Phòng khám: @Html.DisplayFor(model => model.PhongKham)
                    </p>
                    
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-center gap-3">
                            <a asp-action="Index" class="btn btn-light border px-4">Hủy bỏ</a>
                            <button type="submit" class="btn btn-danger px-4">Xác nhận Xóa</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
