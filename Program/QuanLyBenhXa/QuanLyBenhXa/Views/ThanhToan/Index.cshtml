@model IEnumerable<QuanLyBenhXa.Models.HoSoKhamBenh>

@{
    ViewData["Title"] = "Thanh toán viện phí";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h2 class="fw-bold text-primary text-uppercase border-start border-3 border-primary ps-3">Thanh toán viện phí</h2>
            <p class="text-secondary ps-3 mb-0">Danh sách hồ sơ bệnh nhân chờ thanh toán</p>
        </div>
    </div>

    <div class="card border-0 border-top border-3 border-primary">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="bg-white text-primary border-bottom border-primary">
                    <tr>
                        <th class="ps-4">Mã HS</th>
                        <th>Bệnh nhân</th>
                        <th>Ngày khám</th>
                        <th>Bác sĩ phụ trách</th>
                        <th>Trạng thái</th>
                        <th class="text-end pe-4">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">#@item.Id</td>
                                <td class="fw-bold">@item.BenhNhan?.HoTen</td>
                                <td>@item.NgayKham.ToShortDateString()</td>
                                <td>@item.BacSiPhuTrach</td>
                                <td><span class="badge border border-warning text-warning bg-transparent">Chờ thanh toán</span></td>
                                <td class="text-end pe-4">
                                    <a asp-action="Invoice" asp-route-id="@item.Id" class="btn btn-sm btn-success rounded-0 px-3">
                                        <i class="bi bi-cash-coin me-1"></i> Thanh toán
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-4 text-muted">Không có hồ sơ nào chờ thanh toán.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
