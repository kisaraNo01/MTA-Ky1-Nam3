<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuanLyBenhXa</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuanLyBenhXa.styles.css" asp-append-version="true" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom mb-4">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-uppercase" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-hospital me-2"></i>Quản lý Bệnh xá
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        @if (User.IsInRole("Admin") || User.IsInRole("NhanVien"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="BenhNhan" asp-action="Index">Bệnh nhân</a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="BacSi" asp-action="Index">Bác sĩ</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="HoSoKhamBenh" asp-action="Index">Quản lý Hồ sơ</a>
                            </li>
                        }
                        @if (User.IsInRole("Admin") || User.IsInRole("NhanVien"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Thuoc" asp-action="Index">Thuốc</a>
                            </li>
                        }
                        @if (User.IsInRole("BacSi"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="DoctorDashboard" asp-action="Index">Bàn làm việc</a>
                            </li>
                        }
                        @if (User.IsInRole("NhanVien") || User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="ThanhToan" asp-action="Index">Thanh toán</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @using Microsoft.AspNetCore.Identity
                        @using QuanLyBenhXa.Models
                        @inject SignInManager<ApplicationUser> SignInManager
                        @inject UserManager<ApplicationUser> UserManager
                        
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a  class="nav-link" href="#">Xin chào, @User.Identity?.Name</a>
                            </li>
                            <li class="nav-item">
                                <form class="form-inline" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                    <button type="submit" class="nav-link btn btn-link" style="text-decoration: none;">Đăng xuất</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Đăng nhập</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container bg-white p-4 h-100" style="min-height: 80vh;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1055">
        <div id="liveToast" class="toast align-items-center text-white border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body fs-6">
                    <!-- Message here -->
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - QuanLyBenhXa - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        $(document).ready(function () {
            var successMsg = @Json.Serialize(TempData["Success"]);
            var errorMsg = @Json.Serialize(TempData["Error"]);

            if (successMsg) {
                showToast(successMsg, 'bg-success');
            }
            if (errorMsg) {
                showToast(errorMsg, 'bg-danger');
            }

            function showToast(message, bgClass) {
                var toastEl = document.getElementById('liveToast');
                var toastBody = toastEl.querySelector('.toast-body');
                toastBody.textContent = message;
                
                toastEl.classList.remove('bg-success', 'bg-danger');
                toastEl.classList.add(bgClass);
                
                var toast = new bootstrap.Toast(toastEl);
                toast.show();
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
